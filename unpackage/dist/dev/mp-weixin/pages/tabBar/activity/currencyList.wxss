.currency-list .currency-item {
  background-color: #FFFFFF;
  border-radius: 5px;
  position: relative;
  overflow: hidden;
  z-index: 1;
  -webkit-transform: translate3d(0, 0, 0);
          transform: translate3d(0, 0, 0);
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  -webkit-transition: box-shadow 0.3s;
  transition: box-shadow 0.3s;
  padding: 20rpx;
  margin: 25rpx 25rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.currency-list .currency-item-info {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding: 15rpx 0;
}
.currency-list .currency-item-hover {
  box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
}
.currency-list .currency-item-title {
  font-size: 30rpx;
  color: #333;
  margin: 5rpx 0;
  -webkit-line-clamp: 2;
  /*文本占的行数,如果要设置2行加...则设置为2*/
}
.currency-list .currency-item-small {
  font-size: 24rpx;
  color: #999;
  -webkit-line-clamp: 1;
  /*文本占的行数,如果要设置2行加...则设置为2*/
}
.currency-list .currency-item-title,
.currency-list .currency-item-small {
  overflow: hidden;
  /*超出隐藏*/
  text-overflow: ellipsis;
  /*文本溢出时显示省略标记*/
  display: -webkit-box;
  /*设置弹性盒模型*/
  -webkit-box-orient: vertical;
  /*子代元素垂直显示*/
}
.currency-list .ios-bottom {
  height: 40rpx;
  margin-top: -25rpx;
}
.currency-list .banner-ad {
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
  margin-top: 100rpx;
}

