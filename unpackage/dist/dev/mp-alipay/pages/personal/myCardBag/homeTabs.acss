/*顶部导航样式*/
.xh-tabs {
  position: fixed;
  width: 100%;
  left: 0;
  top: 0;
  height: 44px;
  background-color: #FFFFFF;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  z-index: 1;
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
}
.xh-tabs .xh-tabs-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  color: #999999;
  font-size: 28.96rpx;
  font-weight: bold;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.xh-tabs .label-text {
  position: relative;
}
.xh-tabs .cursor {
  position: absolute;
  height: 7.24rpx;
  width: 15%;
  left: 5%;
  bottom: 0;
  background-color: #E02020;
  -webkit-transition: 0.3s cubic-bezier(0.075, 0.82, 0.165, 1);
  transition: 0.3s cubic-bezier(0.075, 0.82, 0.165, 1);
}
.xh-tabs .xh-tab-num {
  color: #999999;
  margin-left: 9.05rpx;
}
.xh-tabs .xh-tab-active {
  color: #ee0a24;
  font-size: 28.96rpx;
}
.xh-tabs .xh-tab-active > .xh-tab-num {
  color: #ee0a24;
}
